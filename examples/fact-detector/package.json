{
  "name": "fact-detector-desktop",
  "version": "1.0.0",
  "description": "Real-time fact-checking tray app",
  "main": "app/main.js",
  "scripts": {
    "start": "./scripts/start.sh",
    "setup": "./scripts/setup.sh",
    "electron": "electron ."
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  },
  "build": {
    "appId": "com.videodb.fact-detector",
    "productName": "Fact Detector",
    "mac": {
      "identity": null,
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "extendInfo": {
        "LSUIElement": true,
        "NSMicrophoneUsageDescription": "Fact Detector needs microphone access to capture audio for real-time fact-checking.",
        "NSScreenCaptureUsageDescription": "Fact Detector needs screen recording access to capture system audio.",
        "NSCameraUsageDescription": "Fact Detector may use camera access for video capture."
      },
      "target": ["dmg", "zip"]
    },
    "icon": "resources/icon.icns",
    "files": ["app/**/*", "entitlements.mac.plist", "package.json"]
  }
}
