{
  "name": "meeting-copilot",
  "version": "1.4.0",
  "description": "A sample Electron application for meetings using VideoDB Capture SDK",
  "main": "frontend/main.js",
  "scripts": {
    "start": "./scripts/start-server.sh",
    "setup": "./scripts/setup.sh",
    "electron": "electron .",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "VideoDB",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.videodb.meeting-copilot",
    "productName": "Meeting Copilot",
    "files": [
      "frontend/**/*",
      "config.json",
      "package.json",
      "resources/**/*",
      "node_modules/videodb/**/*"
    ],
    "mac": {
      "identity": null,
      "extendInfo": {
        "NSScreenCaptureUsageDescription": "Meeting Copilot needs screen recording permission to capture your display during sessions.",
        "NSMicrophoneUsageDescription": "Meeting Copilot needs microphone access to capture audio during sessions."
      },
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "extraResources": [
      {
        "from": "resources/manage-service.sh",
        "to": "manage-service.sh"
      },
      {
        "from": "resources/service-core",
        "to": "../MacOS/service-core"
      },
      {
        "from": "resources/libservicebridge.dylib",
        "to": "../MacOS/libservicebridge.dylib"
      },
      {
        "from": "resources/logs",
        "to": "logs"
      }
    ],
    "asarUnpack": [
      "node_modules/videodb/**/*"
    ]
  },
  "dependencies": {
    "videodb": "github:video-db/videodb-node#release-0.4.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "rtsp-relay": "^1.9.0",
    "sqlite3": "^5.1.7"
  }
}
